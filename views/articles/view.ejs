<% include ../compents/head.ejs %>

<div class="">
    <h2 style="text-align:center;margin-bottom:10px;"><%= title %></h2>
    <p style="text-align:center;margin-bottom:10px;color:#999;font-size:12px;">
        发布时间：<%= gmt_modified %>&nbsp;&nbsp;&nbsp;
        <a href="edit/<%= _id %>">编辑</a>&nbsp;&nbsp;&nbsp;
        <a id="delete" href="javascript:void(0)">删除</a>
    </p>
    <div>
        <%- html %>
    </div>

</div>

<script>
    $(function () {
        const _deleteBtn = $('#delete');

        _deleteBtn.on('click', function () {
            $.ajax({
                url: "/api/v1/articles/delete",
                type: "POST",
                data: {
                    id: "<%= _id %>"
                }
            }).done(function (data) {
                if(data.code!==200){
                    alert(data.msg);
                    window.location.href='/user/login';
                }else{
                    window.location.href = '/';
                }

            });
        })

    })
</script>

